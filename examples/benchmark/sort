#!/usr/bin/perl -w
use strict;
use Math::GSL::Sort qw/:all/;
use Math::GSL::RNG  qw/:all/;
use Benchmark       qw/:all/;
use Data::Dumper;

my $count = shift || 1000;
my $rng = Math::GSL::RNG->new;
my @data = map { (-1)**$_ * $rng->get } (1..5000);

my @stuff;

timethese($count, {
            'perl sort     ' => sub { @stuff = sort @data },
            'Math::GSL sort' => sub { @stuff =gsl_sort(\@data,1,$#data+1) },
});



